extends layout

block content
  h1 Become an Admin
  form(action="/auth/admin" method="POST")
    div
      label(for="admin_passcode") Admin Passcode:
      input(type="password" name="admin_passcode" required)
    div
      button(type="submit") Submit
  if errors
    ul
      each error in errors
        li= error.msg
  a(href='/') Homepage
  a(href='/auth/log-in') Log In
